@model IEnumerable<gestionproduit.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<form method="get">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="searchTerm" class="form-control" placeholder="Search by name" />
        </div>
        <div class="col-md-2">
            <input type="number" name="minPrice" class="form-control" placeholder="Min Price" />
        </div>
        <div class="col-md-2">
            <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParam"]">Price</a>
            </th>
            <th>Stock</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="@product.ImagePath" alt="Product Image" style="max-width: 50px;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mt-3">Add New Product</a>

<!-- Toastify Notification Script -->
<script>
    $(document).ready(function() {  // This code will run once the document is ready
    @if (TempData["ToastMessage"] != null)
    {
        var message = TempData["ToastMessage"]?.ToString();
        var type = TempData["ToastType"]?.ToString();

        var backgroundColor = type == "success" ? "green" : "red";

        // Ensure the Toastify script runs after the page is loaded
        <text>
                        Toastify({
                            text: "@Html.Raw(message)",
                            duration: 3000,
                            close: true,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "@Html.Raw(backgroundColor)",
                            stopOnFocus: true
                        }).showToast();
        </text>
    }
    });
</script>



